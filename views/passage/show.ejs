<script>

  function loadMoreComments(type, id) {
    console.log(type, id);
    var skip = $('#'+type+'-comments').children('.'+type+'').length;
    console.log(skip)

    $.get("/"+type+"s/"+id+"/comments?skip="+skip, function(data, status){
      console.log(!data);
      if(!data){
        $( "#load-more-"+id ).hide();
      }
      else{
        $( "#"+type+"-comments" ).append( data );
        console.log($('#'+type+'-comments').children('.'+type+'').length);
      }

    });
  }


  function deleteComment (type, id, commentId){
    console.log(commentId);;


    $.ajax({
     url: "/"+type+"s/"+id+"/comments/"+commentId,
     type: 'DELETE',
     success: function(response) {
          $( "#comment"+commentId ).remove();
     }
   });
  }



</script>

